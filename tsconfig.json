{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "forceConsistentCasingInFileNames": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,

    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    "allowJs": true,
    "checkJs": false,
    "noEmit": true
  },
  "include": ["src", "server", "api", "bot", "vite.config.ts", "vitest.config.ts"],
  "exclude": ["node_modules", "dist", "build", "coverage", "**/*.d.ts", "**/*.d.ts.map"]
}
